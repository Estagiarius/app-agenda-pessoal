<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <View
            android:id="@+id/viewCorDetalhesEvento"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            tools:background="@color/colorPrimary" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textViewNomeDetalhesEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="Nome do Evento/Aula" />
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewHorarioDetalhesEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody1"
        tools:text="08:00 - 09:00"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewTipoDetalhesEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody2"
        tools:text="Tipo: Aula"
        android:layout_marginBottom="4dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewTurmaDetalhesEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody2"
        tools:text="Turma: 9A"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginBottom="4dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewSalaLocalDetalhesEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody2"
        tools:text="Local: Sala 101"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewObservacoesDetalhesEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody2"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="Observações importantes sobre este evento ou aula."
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonPlanoDeAulaDetalhes"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Plano de Aula"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>
